@using Packt.Shared
@model IEnumerable<Customer>





<div class="d-flex" style="flex-direction: column;">
    <!-- Левый блок (кнопки, текст или любой другой контент) -->
    <style>
        .form-container {
            margin-bottom: 20px; /* Отступ снизу для первого блока */
        }

        .me-3:nth-of-type(2) {
            margin-top: 20px; /* Отступ сверху для второго блока */
        }

        .me-3 {
            margin-bottom: 10px; /* Отступ снизу для каждого блока */
        }
    </style>

    <div class="form-container" style="width: 20%;">
        <div class="me-3">
            <form asp-action="CreateCustomer" method="post">
                <div class="form-group">
                    <input name="customer_id" placeholder="Enter a customer id" style="width: 100%;" />
                </div>
                <div class="form-group">
                    <input name="customer_name" placeholder="Enter a customer name" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Create customer" class="submit-button" />
                </div>
            </form>
        </div>

        <div class="me-3">
            <form asp-action="FindCustomer" method="get">
                <div class="form-group">
                    <input name="customer_id" placeholder="Enter a customer id for searching" style="width: 100%;" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Find customer in base" class="submit-button" />
                </div>
            </form>
        </div>
    </div>
    <h2>@ViewData["Title"]</h2>
    <div class="me-3">
        <form asp-action="UpdateCustomer" method="put" style="width: 20%;">
            <div class="form-group">
                <input name="customer_id" placeholder="Enter a customer id for updating" style="width: 100%;" />
            </div>
            <div class="form-group">
                <input name="company_name" placeholder="Enter a customer company" />
            </div>
            <div class="form-group">
                <input name="contact_name" placeholder="Enter a contact name" style="width: 100%;" />
            </div>
            <div class="form-group">
                <input name="contac_title" placeholder="Enter a contac title" style="width: 100%;" />
            </div>
            <div class="form-group">
                <input name="phone" placeholder="Enter a contact phone" />
            </div>
            <div class="form-group">
                <input name="city" placeholder="Enter a customer id" style="width: 100%;" />
            </div>
            <div class="form-group">
                <input name="country" placeholder="Enter a country" />
            </div>
            <div class="form-group">
                <input type="submit" value="Update customer" class="submit-button" />
            </div>
        </form>
    </div>
</div>

   
  

    <!-- Правый блок с таблицей -->
    <div class="flex-grow-1">
        <table class="table">
            <thead>
                <tr>
                    <th>Customer ID</th>
                    <th>Company Name</th>
                    <th>Contact Name</th>
                    <th>Phone</th>
                </tr>
            </thead>
            <tbody>
                @if (Model is not null)
                {
                    @foreach (Customer c in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => c.CustomerId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => c.CompanyName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => c.ContactName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => c.Phone)
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>





