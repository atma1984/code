@page
@using Packt.Shared
@model Northwind.Web.Pages.SuppliersModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="row">
    <h1 class="display-2">Suppliers</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Company Name</th>
                <th>Country</th>
                <th>Phone</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Suppliers is not null)
            {
                @foreach (var s in Model.Suppliers)
                {
                    <tr>
                        <td>@s.CompanyName</td>
                        <td>@s.Country</td>
                        <td>@s.Phone</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<div class="row">
    <p>Enter details for a new supplier:</p>
    <!-- Validation summary -->
    <div asp-validation-summary="All" class="text-danger"></div>

    <form method="post">
        <div>
            <input asp-for="Supplier.CompanyName" placeholder="Company Name" required />
            <span asp-validation-for="Supplier.CompanyName" class="text-danger"></span>
        </div>
        <div>
            <input asp-for="Supplier.Country" placeholder="Country" />
        </div>
        <div>
            <input asp-for="Supplier.Phone" placeholder="Phone" />
        </div>
        <button type="submit">Submit</button>
    </form>
</div>