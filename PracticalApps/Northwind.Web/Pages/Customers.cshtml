@page
@model Northwind.Web.Pages.CustomersModel

<h1>Customers</h1>
<table class="table">
    <thead>
        <tr>
            <th>Country</th>
            <th>Company</th>
            <th>Contact</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Customers != null)
          {
              foreach (var c in Model.Customers.OrderBy(counry => counry.Country))
              {
                <tr>
                    <td>@c.Country</td>
                   
                    <td>@c.CompanyName</td>
					<td>
                        <a class="btn btn-primary" href="/CustomerInfo?id=@c.CustomerId">
                            @c.ContactName
                         </a>
                    </td>
                </tr>
        }
}
    </tbody>
</table>
